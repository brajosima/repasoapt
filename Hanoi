#include <iostream>
using namespace std;

void hanoi(int temp, char x, char z, char y){
    if (temp==1){
        cout << "Mueva el disco --> "<<temp<<" // A partir de "<<x<< " hasta "<<z<<endl; 
    }else{
        hanoi(temp-1,x,y,z);
        cout<<"Mueva el disco --> "<<temp<<" // A partir de "<<x<< " hasta " <<z<<endl;
        hanoi(temp-1,y,z,x);
    }
}

int main(){
    int tmp;
    char x,y,z;

cout<<"Las torres son X Y Z\n";
cout<<"Ingrese numero de discos: "; cin>>tmp;
hanoi(tmp, 'x', 'z', 'y' );
}
